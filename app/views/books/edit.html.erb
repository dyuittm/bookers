<div class="edit">
  <h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>error prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <div class="edit-form">
    <%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
      <p>Title</p>
      <%= f.text_field:title %>
      <p>Body</p>
      <%= f.text_area:body %>
      <%= f.submit'Update Book' %>
    <% end%>
  </div>
  
  <div class="form">
    <span class="link"><%= link_to "Show",book_path(params[:id]) %></span>
    <%= "|" %>
    <span class="link"><%= link_to "Back",books_path %></span>
  </div>
</div>
