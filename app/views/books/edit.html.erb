<%= form_with model: @book,url: book_path(@book.id),method: :patch do |f| %>
  <div class="field">
    <p>Title</p>
    <%= f.text_field:title %>
  </div>
  <div class="field">
    <p>Body</p>
    <%= f.text_area:body %>
  </div>
  <div class="action">
    <%= f.submit'Update Book' %>
  </div>
<% end%>

